<Window x:Name="ImageDisplayWindow" x:Class="StudyAid.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudyAid"
        mc:Ignorable="d"
        Title="Window1" SizeToContent="WidthAndHeight" HorizontalAlignment="Center">
    <Grid Margin="0,0,0,6" HorizontalAlignment="Left">
        <Image x:Name="imgPicture" HorizontalAlignment="Center" Margin="10,10,10,25" Stretch="None"/>
        <Button x:Name="btnClose" Content="Close" Margin="0,0,0,0" Width="75" Click="Button_Click" HorizontalContentAlignment="Center" VerticalContentAlignment="Top" HorizontalAlignment="Center" Height="19" VerticalAlignment="Bottom"/>
        <Grid x:Name="innerGrid" Margin="10,10,0,-0.4" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Image x:Name="imgBubble" HorizontalAlignment="Left" VerticalAlignment="Top" Source="Speech-Bubble-PNG-Clipart.png" Stretch="Fill"/>
            <Viewbox x:Name="vbText" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0" Stretch="Uniform" StretchDirection="Both">
                <TextBlock x:Name="txCaption" TextWrapping="WrapWithOverflow" Text="TextBlock" TextAlignment="Center" FontSize="11" />

            </Viewbox>

        </Grid>

    </Grid>
</Window>
